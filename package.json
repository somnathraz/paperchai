{
  "name": "invoice",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prisma:seed": "node prisma/seed.js",
    "test:email": "node scripts/run-test-email.js",
    "test:draft-reminders": "curl -X POST http://localhost:3000/api/invoices/draft-reminders -H 'Content-Type: application/json' -d '{\"forceAll\": true}'",
    "test:scheduled-invoices": "curl -X POST http://localhost:3000/api/internal/scheduled-invoices/run",
    "cron:reminders": "curl -X POST http://localhost:3000/api/internal/reminders/run",
    "cron:scheduled": "curl -X POST http://localhost:3000/api/internal/scheduled-invoices/run",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "node scripts/check-file-size.js"
    ],
    "*.{json,css,scss,md}": [
      "prettier --write"
    ]
  },
