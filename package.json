    "@radix-ui/react-tabs": "^1.1.13",
    "@reduxjs/toolkit": "^2.11.1",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
